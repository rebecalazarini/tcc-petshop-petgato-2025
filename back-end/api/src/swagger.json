{
    "openapi": "3.0.0",
    "info": {
        "title": "API de consulta (Node + Prisma + MySQL[MariaDB])",
        "version": "1.0.0",
        "description": "Documentação da API adocao, API de adocao com Node.js, Prisma e MySQL (MariaDB).<br>Criada para aulas de Desenvolvimento de Software do SESI/SENAI 2025.",
        "contact": {
            "name": "Rebeca Lazarini",
            "email": "rebecalazarini2007@gmail.com",
            "url": "https://github.com/rebecalazarini"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3001",
            "description": "Servidor local"
        }
    ],
    "securityDefinitions": {
        "bearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header",
            "description": "Bearer token para autenticação",
            "scheme": "bearer",
            "bearer format": "JWT",
            "bearer token": "JWT <token>",
            "bearer token description": "Bearer token para autenticação"
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearer format": "JWT"
            }
        }
    },
    "tags": [
        {
            "name": "Teste",
            "description": "Endpoint de teste da API"
        },
        {
            "name": "Rotas de Login",
            "description": "Endpoints de usuarios"
        },
        {
            "name": "CRUD de Usuarios",
            "description": "Endpoints de usuarios"
        },
        {
            "name": "CRUD de Consulta",
            "description": "Endpoints de consulta"
        },
        {
            "name": "CRUD de Adocao",
            "description": "Endpoints de adocao"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "Teste"
                ],
                "summary": "Endpoint de teste geral da API",
                "responses": {
                    "200": {
                        "description": "Retorna uma mensagem de teste"
                    },
                    "500": {
                        "description": "Erro ao processar a requisição"
                    }
                }
            }
        },
        "/api/login": {
            "get": {
                "tags": [
                    "Rotas de Login"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Endpoint para validar o login",
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso"
                    },
                    "401": {
                        "description": "Token inválido ou expirado"
                    }
                }
            },
            "post": {
                "tags": [
                    "Rotas de Login"
                ],
                "summary": "Endpoint para fazer o login",
                "requestBody": {
                    "description": "Dados de login",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "default": "ana.silva@email.com"
                                    },
                                    "senha": {
                                        "type": "string",
                                        "default": "senha123"
                                    },
                                    "validade": {
                                        "type": "integer",
                                        "default": 30
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso"
                    },
                    "400": {
                        "description": "Erro ao fazer login, verifique e-mail e senha"
                    }
                }
            }
        },
        "/api/usuarios": {
            "get": {
                "tags": [
                    "CRUD de Usuarios"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Endpoint para obter todos os usuários",
                "responses": {
                    "200": {
                        "description": "Lista de usuários cadastrados"
                    }
                }
            },
            "post": {
                "tags": [
                    "CRUD de Usuarios"
                ],
                "summary": "Endpoint para cadastrar novo usuário",
                "requestBody": {
                    "description": "Dados de login",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string",
                                        "default": "Ana Silva"
                                    },
                                    "email": {
                                        "type": "string",
                                        "default": "ana.silva@email.com"
                                    },
                                    "senha": {
                                        "type": "string",
                                        "default": "senha123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Novo usuário"
                    },
                    "400": {
                        "description": "Erro ao cadastrar usuário, envie nome, email, senha e tipo [ADMIN, CLIENTE]"
                    }
                }
            },
            "patch": {
                "tags": [
                    "CRUD de Usuarios"
                ],
                "summary": "Endpoint para quando usuário esquecer a senha e deseja Resetar",
                "requestBody": {
                    "description": "Dados do usuário",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "default": "ana.silva@email.com"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "Email enviado ao usuário com nova senha provisória"
                    },
                    "400": {
                        "description": "Erro ao resetar a senha do usuário usuário, verifique o email e envie novamente"
                    }
                }
            }
        },
        "/api/usuarios/{id}": {
            "patch": {
                "tags": [
                    "CRUD de Usuarios"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Endpoint para alterar um usuário",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID do usuário que deve ser alterado",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Dados de login",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string",
                                        "default": "Ana Silva"
                                    },
                                    "email": {
                                        "type": "string",
                                        "default": "ana.silva@email.com"
                                    },
                                    "senha": {
                                        "type": "string",
                                        "default": "senha321"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "Usuário alterado"
                    },
                    "400": {
                        "description": "Erro ao alterar usuário, envie nome ou email ou senha ou tipo [ADMIN, CLIENTE]"
                    }
                }
            },
            "delete": {
                "tags": [
                    "CRUD de Usuarios"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Endpoint para excluir um usuário",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID do usuário que deve ser excluído",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Usuário excluído"
                    },
                    "400": {
                        "description": "Erro ao excluir usuário."
                    }
                }
            }
        },
        "/api/consulta": {
            "get": {
                "tags": [
                    "CRUD de Consulta"
                ],
                "summary": "Endpoint para obter todos os consulta",
                "responses": {
                    "200": {
                        "description": "Lista de consulta cadastrados"
                    }
                }
            },
            "post": {
                "tags": [
                    "CRUD de Consulta"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Endpoint para cadastrar novo consulta",
                "requestBody": {
                    "description": "Dados do consulta",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nomePet": {
                                        "type": "string",
                                        "default": "Lilissa"
                                    },
                                    "especiePet": {
                                        "type": "string",
                                        "default": "Cachorro"
                                    },
                                    "racaPet": {
                                        "type": "string",
                                        "default": "Yorkshire"
                                    },
                                    "nomeProprietario": {
                                        "type": "string",
                                        "default": "Joao"
                                    },
                                    "nascpet": {
                                        "type": "DateTime",
                                        "default": "2023-10-15"
                                    },
                                    "emailProprietario": {
                                        "type": "string",
                                        "default": "joao@exemplo.com"
                                    },
                                    "dados": {
                                        "type": "string",
                                        "default": "alergias ou problema de saude"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Novo consulta cadastrada"
                    },
                    "400": {
                        "description": "Erro ao cadastrar consulta, envie nome, especie, raca, nome do proprietario, data de nascimento, email do proprietario e dados"
                    }
                }
            }
        },
        "/api/consulta/{id}": {
            "patch": {
                "tags": [
                    "CRUD de consulta"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Endpoint para alterar uma consulta",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID da consulta que deve ser alterada",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Dados da consulta",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nomePet": {
                                        "type": "string",
                                        "default": "Lilissa"
                                    },
                                    "especiePet": {
                                        "type": "string",
                                        "default": "Cachorro"
                                    },
                                    "racaPet": {
                                        "type": "string",
                                        "default": "Yorkshire"
                                    },
                                    "nomeProprietario": {
                                        "type": "string",
                                        "default": "Joao"
                                    },
                                    "nascpet": {
                                        "type": "DateTime",
                                        "default": "2023-10-15"
                                    },
                                    "emailProprietario": {
                                        "type": "string",
                                        "default": "joao@exemplo.com"
                                    },
                                    "dados": {
                                        "type": "string",
                                        "default": "alergias ou problema de saude"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "Consulta alterada"
                    },
                    "400": {
                        "description": "Erro ao alterar consulta, envie nome ou especie ou raca ou nome do proprietario ou data de nascimento ou email do proprietario ou dados"
                    }
                }
            },
            "delete": {
                "tags": [
                    "CRUD de consulta"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Endpoint para excluir uma consulta",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID da consulta que deve ser excluída",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Consulta excluída"
                    },
                    "400": {
                        "description": "Erro ao excluir consulta."
                    }
                }
            }
        },
        "/api/adocao": {
            "get": {
                "tags": [
                    "CRUD de Adoção"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Endpoint para obter todas as adoções",
                "responses": {
                    "200": {
                        "description": "Lista de adoções cadastrados"
                    }
                }
            },
            "post": {
                "tags": [
                    "CRUD de Adoção"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Endpoint para cadastrar nova adoção",
                "requestBody": {
                    "description": "Dados da adoção",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string",
                                        "default": "Nome do Pet"
                                    },
                                    "peso": {
                                        "type": "number",
                                        "default": 7.9
                                    },
                                    "idade": {
                                        "type": "integer",
                                        "default": 2
                                    },
                                    "raca": {
                                        "type": "string",
                                        "default": "SRD"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Novo adocao cadastrado"
                    },
                    "400": {
                        "description": "Erro ao cadastrar adocao"
                    }
                }
            }
        },
        "/api/adocao/{id}": {
            "patch": {
                "tags": [
                    "CRUD de adocao"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Endpoint para alterar um adocao",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID da adocao que deve ser alterada",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Dados da adoção",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string",
                                        "default": "Nome do Pet"
                                    },
                                    "peso": {
                                        "type": "number",
                                        "default": 7.9
                                    },
                                    "idade": {
                                        "type": "integer",
                                        "default": 2
                                    },
                                    "raca": {
                                        "type": "string",
                                        "default": "SRD"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "adoção alterada"
                    },
                    "400": {
                        "description": "Erro ao alterar adoção, envie usuarioId, produtoId e quantidade"
                    }
                }
            },
            "delete": {
                "tags": [
                    "CRUD de adocao"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Endpoint para excluir uma adoção",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID do adocao que deve ser excluído",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "adocao excluído"
                    },
                    "400": {
                        "description": "Erro ao excluir adocao."
                    }
                }
            }
        }
    }
}